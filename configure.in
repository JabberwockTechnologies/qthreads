AC_ARG_ENABLE([profiling],
              [AS_HELP_STRING([--enable-profiling=[[areas]]],
                              [turn on the specified comma-separated types of
                               profiling. Available types are: shepherd, lock,
							   steal, cas_steal, threadc, and sincs. Shepherd
							   profiling counts the wall-clock time that each
							   shepherd spends idle. Lock profiling counts the
							   time spent aquiring locks. Steal profiling
							   counts the amount of workstealing that was done
							   (only applies to multithreaded shepherds).
							   Cas_steal profiling counts how many CAS failures
							   happen in nottingham steal operations. Threadc
							   counts the number of threads spawned and the
							   number of threads available to run
							   concurrently. Sincs profiling reports sinc
                               counter usage data.])],
              [for area in $(echo "$enable_profiling" | sed 's/,/ /g') ; do
                 case "$area" in
                   shepherd)
                     enable_shepherd_profiling=yes
                     ;;
                   lock)
                     enable_lock_profiling=yes
                     ;;
                   steal)
                     enable_steal_profiling=yes
                     ;;
				   cas_steal|cas-steal)
				     enable_cas_steal_profiling=yes
					 ;;
				   threadc)
				     enable_thread_count=yes
					 ;;
                   sincs)
                     enable_sincs_profiling=yes
                     ;;
                 esac
               done],
