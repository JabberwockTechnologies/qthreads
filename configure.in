AC_ARG_ENABLE([debug],
              [AS_HELP_STRING([--enable-debug=[[areas]]],
                              [prints out debugging information as programs
                               run, tracing their qthread-related behavior.
                               Uses the environment variable
							   QTHREAD_DEBUG_LEVEL. The higher the level, the
							   greater the detail. This enables debugging in
							   the specified areas. Default area is "all".
							   Other available areas are:
							   affinity,
							   threadqueues,
							   thread,
							   shepherd,
							   core,
							   mpool,
							   syscalls,
							   locks,
							   febs,
							   syncvars,
							   io,
							   loops,
							   barrier,
							   qarray,
							   rcrtool,
							   futurelib,
							   xomp])],
              [AS_IF([test "x$enable_debug" = "xyes"],
					 [enable_debug="affinity,threadqueues,thread,shepherd,core,mpool,syscalls,locks,febs,syncvars,io,loops,barrier,qarray,rcrtool,futurelib,xomp"])
			   for area in $(echo "$enable_debug" | sed 's/,/ /g') ; do
                 case "$area" in
					 affinity) enable_debug_affinity=yes ;;
					 threadqueues) enable_debug_threadqueues=yes ;;
					 thread) enable_debug_threads=yes ;;
					 shepherd) enable_debug_shepherd=yes ;;
					 core) enable_debug_core=yes ;;
					 mpool) enable_debug_mpool=yes ;;
					 syscalls) enable_debug_syscalls=yes ;;
					 locks) enable_debug_locks=yes ;;
					 febs) enable_debug_febs=yes ;;
					 syncvars) enable_debug_syncvars=yes ;;
					 io) enable_debug_io=yes ;;
					 loops) enable_debug_loops=yes ;;
					 barrier) enable_debug_barrier=yes ;;
					 qarray) enable_debug_qarray=yes ;;
					 rcrtool) enable_debug_rcrtool=yes ;;
					 futurelib) enable_debug_futurelib=yes ;;
